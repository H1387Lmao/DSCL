use pkg::discord
use random

const intents = new Intents()
const prefix = "!"
const TOKEN = "MY_VERY_SECRET_TOKEN"

intents->message_content=True

const bot = new Bot(
	prefix=prefix,
	intents
)

cmd hello(User: person) -> bot{
	if (person->bot){
		this->respond("Hi fellow bot!")
	}else {
		this->respond("Hi%s" % person)

	}
}

cmd roll_dice(Number: min, Number: max) -> bot{
	mut number = random->randint(min, max)
	this->respond("Your random number is: %s" % number)
}

bot->run(TOKEN)
